# MARBLE Environment Configuration Template
# Copy this file to .env and update the values

# 1. API KEYS (Required)

# Anthropic API Key for Claude models
# Get your key from: https://console.anthropic.com/
ANTHROPIC_API_KEY="api"

# OpenAI API Key for embeddings and models
# Get your key from: https://platform.openai.com/api-keys
OPENAI_API_KEY="api"

# LangSmith API Key for tracing and monitoring (Optional)
# Get your key from: https://smith.langchain.com/
LANGSMITH_API_KEY="api"

# 2. LANGSMITH TRACING CONFIGURATION

# Enable detailed tracing for debugging
LANGSMITH_TRACING=true
LANGCHAIN_TRACING_V2=true
LANGCHAIN_PROJECT="MARBLE-Debug"
LANGCHAIN_ENDPOINT="https://api.smith.langchain.com"

# Background job timeout in seconds (e.g., 31536000 for ~1 year)
BG_JOB_TIMEOUT_SECS=

# 3. AUTO-CONTINUE CONFIGURATION

# Maximum auto-restart count on recursion error
AUTO_CONTINUE_MAX_RETRIES=100

# Retry interval (seconds) - prevents too fast retries
AUTO_CONTINUE_RETRY_DELAY=5

# LangGraph recursion limit per iteration (e.g., 5000)
LANGGRAPH_RECURSION_LIMIT=

# 4. PROJECT CONFIGURATION

# Project root path - Update this to your actual project location
# Example: /home/username/LangGraph/MARBLE
PROJECT_ROOT="folder"

# User ID for container naming and file ownership
# This will be automatically detected if not set
USER_ID=

# 5. MCP CONFIGURATION

# Enable MCP (Model Context Protocol) containers
ENABLE_MCP=true

# 6. SETUP INSTRUCTIONS
#
# 1. Copy this file to .env:
#    cp .env.example .env
#
# 2. Update the API keys with your actual keys
#
# 3. Update PROJECT_ROOT to your actual project path
